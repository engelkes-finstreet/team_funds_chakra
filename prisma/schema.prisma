generator client {
  provider = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model AdminUser {
  id                          String                       @id @default(uuid())
  createdAt                   DateTime                     @default(now())
  updatedAt                   DateTime                     @updatedAt
  email                       String                       @unique
  slug                        String                       @unique
  passwordHash                String
  isApproved                  Boolean                      @default(false)
  isConfirmed                 Boolean                      @default(false)
  seasons                     Season[]
  players                     Player[]
  punishment                  Punishment[]
  playerPayments              PlayerPayments[]
  playerPunishments           PlayerPunishments[]
  confirmToken                ConfirmAdminUserToken?
  resetAdminUserPasswordToken ResetAdminUserPasswordToken?

}

model User {
  id                     String                  @id @default(uuid())
  createdAt              DateTime                @default(now())
  updatedAt              DateTime                @updatedAt
  email                  String                  @unique
  isConfirmed            Boolean                 @default(false)
  firstName              String
  lastName               String
  slug                   String                  @unique
  passwordHash           String
  player                 Player?
  confirmToken           ConfirmUserToken?
  resetUserPasswordToken ResetUserPasswordToken?
}

model ConfirmUserToken {
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  token     String   @unique
  expiresAt DateTime

  @@index([userId])
}

model ResetUserPasswordToken {
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  token     String   @unique
  expiresAt DateTime

  @@index([userId])
}

model ConfirmAdminUserToken {
  adminId   String    @unique
  admin     AdminUser @relation(fields: [adminId], references: [id])
  token     String    @unique
  expiresAt DateTime

  @@index([adminId])
}

model ResetAdminUserPasswordToken {
  adminId   String    @unique
  admin     AdminUser @relation(fields: [adminId], references: [id])
  token     String    @unique
  expiresAt DateTime

  @@index([adminId])
}

model Season {
  id                String              @id @default(uuid())
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  startDate         DateTime
  endDate           DateTime
  adminUserId       String
  createdBy         AdminUser           @relation(fields: [adminUserId], references: [id])
  slug              String              @unique
  punishments       Punishment[]
  playerPayments    PlayerPayments[]
  playerPunishments PlayerPunishments[]

  @@index([adminUserId])
}

enum Position {
  PLAYER
  COACH
  ASSISTANT
}

model Player {
  id                String              @id @default(uuid())
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  firstName         String
  lastName          String
  position          Position            @default(PLAYER)
  slug              String              @unique
  adminUserId       String
  createdBy         AdminUser           @relation(fields: [adminUserId], references: [id])
  userId            String?             @unique
  connectedUser     User?               @relation(fields: [userId], references: [id])
  playerPayments    PlayerPayments[]
  playerPunishments PlayerPunishments[]

  @@index([adminUserId])
  @@index([userId])
}

enum PunishmentType {
  MONEY
  BEER
}

model Punishment {
  id                String              @id @default(uuid())
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  name              String              @unique
  slug              String              @unique
  amount            Int
  type              PunishmentType
  adminUserId       String
  createdBy         AdminUser           @relation(fields: [adminUserId], references: [id])
  seasonId          String
  season            Season              @relation(fields: [seasonId], references: [id])
  playerPunishments PlayerPunishments[]

  @@index([adminUserId])
  @@index([seasonId])
}

enum PaymentType {
  ADMIN
  PAYPAL
}

model PlayerPayments {
  id          String         @id @default(uuid())
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  adminUserId String?
  createdBy   AdminUser?     @relation(fields: [adminUserId], references: [id])
  paymentType PaymentType
  playerId    String
  player      Player         @relation(fields: [playerId], references: [id])
  amount      Int
  type        PunishmentType
  seasonId    String
  season      Season         @relation(fields: [seasonId], references: [id])

  @@index([seasonId])
  @@index([playerId])
}

model PlayerPunishments {
  id           String     @id @default(uuid())
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  adminUserId  String
  createdBy    AdminUser  @relation(fields: [adminUserId], references: [id])
  playerId     String
  player       Player     @relation(fields: [playerId], references: [id])
  punishmentId String
  punishment   Punishment @relation(fields: [punishmentId], references: [id])
  seasonId     String
  season       Season     @relation(fields: [seasonId], references: [id])
  amount       Int

  @@index([adminUserId])
  @@index([playerId])
  @@index([punishmentId])
  @@index([seasonId])
}
